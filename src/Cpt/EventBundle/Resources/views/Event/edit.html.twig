            {{ form_label(eventform.title, null, { 'attr': {'class': 'mandatory_field_label'} }) }}
            {{ form_widget(eventform.title) }}
        </div>
    {#***********************************************#}
    {# Field: Content
    {#***********************************************#}
       <div>
            {{ form_errors(eventform.content) }}
            {{ form_widget(eventform.content) }}
