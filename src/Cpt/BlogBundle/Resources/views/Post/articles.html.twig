{##############################################################################}
{# JAVASCRIPT
{##############################################################################}
{#****************************************************************************#}
{# Includes common comment handling javascript
{#****************************************************************************#}
{% include 'CptBlogBundle:Post:articles.js.twig' %}


{#
{#
{##############################################################################}
{# HTML
{##############################################################################}
 <div class="main_section">        
    <div class="column_title_article">
        {{'main.title.articles'|trans}}
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            <a id='newarticle' class="article_new_btn">{{'main.button.new'|trans}}</a>
        {% endif %}
    </div>
    {#**************************************************************************#}
    {# A la une
    {#**************************************************************************#}
    <div id="homepage_articles_label" class="alaune_label">{{ "article.alaune_label"|trans }}</div>
    <div id="homepage_aticles">
    {# preview_post.html.twig => loaded and appened by ajax request #}
    </div>
    
    {#**************************************************************************#}
    {# Separator
    {#**************************************************************************#}
    <div>
        <hr class="line_separator"/>
        {#**************************************************************************#}
        {# Filter All / MyArticles
        {#**************************************************************************#}
        <div id="articles_filter">
            <ul>
                <li id="articles_filter_all">{{ "article.filter.all"|trans }}</li>
                <li id="articles_filter_myarticles">{{ "article.filter.myarticles"|trans }}</li>
            </ul>
        </div>
        {#**************************************************************************#}
        {# Labels Date / Title ..
        {#**************************************************************************#}
        <div class="post_date_label">Date</div>
        <div class="post_titre_label">Titre</div>
    </div>
    {#**************************************************************************#}
    {# All other articles
    {#**************************************************************************#}
    {# Display article list #}
    <div id="articles">
        {# preview_post.html.twig => loaded and appened by ajax request #}
    </div>
    <ul id="postpagination" class="post_pagination">
    </ul>
    {#**************************************************************************#}
    {# Ajax Loading icon
    {#**************************************************************************#}
    <div id="loadingarticles" class="loading">
        Loading articles...
    </div>
</div>
{#**************************************************************************#}
{# Popup to create and edit an article
{#**************************************************************************#}
{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
<div id="popup_new_article">
</div>
{% endif %}