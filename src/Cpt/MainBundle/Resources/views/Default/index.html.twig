{% extends 'CptMainBundle::main.html.twig' %}

{% block leftcol %}
    <div class="main_section">
        <div class="column_title_event">
            <div id="column_title_event_title">{{'main.title.register'|trans}}</div>
            <div id="leftcol_button"></div>
        </div>
        {# Flash messages #}        
        <div id="event_user_messages" class="row-fluid message_information" >
            {% for flashMessage in app.session.flashbag.get('notice') %}
                {{ flashMessage }}
            {% endfor %}
        </div>
        <div id="leftcol_event">
            {% render controller("CptEventBundle:Event:index", {"event_permalink": event_permalink, "_locale": app.request.locale }) %}
        </div>
        <div id="leftcol_about">
        </div>        
    </div>
{% endblock %}


{% block rightcol %}
    <div class="main_section">
        <div class="column_title_article">
            <div id="column_title_article_title"></div>
            <div id="rightcol_button"></div>
        </div>
        <div id="rightcol_article">
        {% render controller("CptBlogBundle:Post:view", {"article_permalink": article_permalink, "_locale": app.request.locale}) %}
        </div>
    </div>
{% endblock %}
