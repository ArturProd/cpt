{% if error %}
    <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
{% endif %}
<script type="text/javascript">
    $(function() {
        $( "#registerModal" ).dialog({
          autoOpen: false,
          show: {
            effect: "blind",
            duration: 100
          },
          hide: {
            effect: "blind",
            duration: 100
          }
        });

        $( "#registerformopener" ).click(function() {
          $( "#registerModal" ).dialog( "open" );
        });

    });
</script>

<form action="{{ path("fos_user_security_check") }}" method="post" class="form-signin">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    <ul>
        <li><input type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="{{ 'security.login.username'|trans({}) }}" /></li>
        <li><input type="password" id="password" name="_password" required="required" placeholder="{{ 'security.login.password'|trans({}) }}"/></li>
        <li><input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}) }}" /></li>
        <li><input type="checkbox" id="remember_me" name="_remember_me" value="on" /></li>
        <li><label for="remember_me">{{ 'security.login.remember_me'|trans({}) }}</label></li>
        <li><a id="registerformopener" href="#registerformopener" data-toggle="modal" class="btn btn-success">{{"main.menu.item.register"|trans}}</a></li>

    </ul>
</form>

<!--registration modal popup-->
<section>
            <div id="registerModal" title="Créer un compte">
                <div class="">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h3 id="myModalLabel modal_autosize">{{"main.menu.item.register"|trans }}</h3>
                </div>
                <div class="">
                    {% render controller("FOSUserBundle:Registration:register") %}   
                </div>
                <div class="">
                    <button class="btn" data-dismiss="modal" aria-hidden="true">Fermer</button>
                </div>
            </div>
</section>