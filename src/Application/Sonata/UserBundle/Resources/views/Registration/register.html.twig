<script type="text/javascript">
    $(function() {
        $('#sign_in_form').submit(function(event){
            cancelAllJqXHR();
            cancelAllTimers();
        });
        
        $( "#registerformopener" ).click(function() {
          ShowPage(PAGE_REGISTER);
        });

    });
</script>
<!--registration modal popup-->

<div class="main_section registration">
    <div class="column_title_event">
        <div id="column_title_event_title">{{'main.title.register'|trans}}</div>
        <div><a class="event_new_btn" onclick="ShowPage(PAGE_EVENT);">{{'main.button.back'|trans}}</a></div>
    </div>    
    <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
        <div  class="input_div">
            {#{ form_label(eventform.city_name, null, { 'attr': {'class': 'input_label mandatory_field_label'} }) }#}
            {{ form_label(form.username) }}            
            {{ form_widget(form.username) }}
        </div>
        <div  class="input_div">
            {{ form_label(form.email) }}            
            {{ form_widget(form.email) }}
        </div>
        <div  class="input_div">
            {#{ form_label(eventform.city_name, null, { 'attr': {'class': 'input_label mandatory_field_label'} }) }#}
            {{ form_widget(form.plainPassword) }}
        </div>
        <div  class="input_div">
            {{ form_label(form.firstname) }}            
            {{ form_widget(form.firstname) }}
        </div>
      <div class="input_div">
        <label title="{{'hint.event.placesearch'|trans}}" class="input_label" for="placesearch">{{'event.googleplacelabel'|trans}}</label>
        <input title="{{'hint.event.placesearch'|trans}}" type="text" id="registration_placesearch" name="placesearch" onFocus="geolocate();" value="" autocomplete="off" >
     </div>
        <div  class="input_div">
            {{ form_label(form.cityname) }}            
            {{ form_widget(form.cityname) }}
        </div>        
        <div>
            <input type="submit" value="{{ 'registration.submit'|trans({}) }}" />
        </div>
    </form>
</div>

